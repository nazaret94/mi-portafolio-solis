---
const { habilidadesData  } = Astro.props;
---
<!-- Encabezado Herramientas -->
<div class="w-full mb-10">
  <div class="w-full sm:w-3/4">
    <div class="degradado-verde-2 h-20 rounded-b-xl flex items-center justify-center tx-negro">
      <h1 class="pacifico-regular text-3xl sm:text-4xl md:text-5xl text-center">Herramientas</h1>
    </div>
  </div>
</div>

<!-- Grid de logos -->
<div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 gap-6 max-w-6xl mx-auto px-4 pb-10">
  <!-- Cada tarjeta de logo -->
  {habilidadesData.map(item => (
    <div class="bg-gray-100 rounded-xl flex items-center justify-center aspect-square shadow-md">
      <img src={item.logo} alt={item.nombre} class="max-h-full max-w-full object-contain" />
    </div>
  ))}
</div>
