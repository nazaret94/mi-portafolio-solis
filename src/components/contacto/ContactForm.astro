    />

    <!-- Mensaje -->
    <textarea
      placeholder="MENSAJE"
      rows="5"
      class="w-full px-4 py-3 rounded-md bg-white text-base sm:text-lg md:text-3xl text-gray-600 placeholder-gray-500 resize-none focus:outline-none focus:ring-2 focus:ring-pink-300"
    ></textarea>

