---
// src/components/Section.astro
const { title = "", subtitle = "", id = "", class: extraClass = "" } = Astro.props;
---
<section id={id} class={`py-8 ${extraClass}`}>
  {title && (
    <header class="mb-4">
      <h2 class="text-2xl md:text-3xl font-bold">{title}</h2>
      {subtitle && <p class="text-sm md:text-base text-gray-600 mt-1">{subtitle}</p>}
    </header>
  )}

  <div class="prose max-w-none">
    <slot />
  </div>
</section>
