---
import BaseLayout from "../layouts/BaseLayout.astro"
import Herramienta from "../components/herramientas/herramientas-logos.astro"
import Proyerctos from "../components/herramientas/Proyectos.astro"
import "../styles/global.css"

const response = await fetch('https://mi-api-solis.vercel.app/api/alumno');
const data = await response.json();
const habilidadesData = data[0].habilidades; 
const proyectosData = data[0].proyectos;
---

<BaseLayout title="Herramientas y Proyectos" activePage="herramientas">
  <Herramienta habilidadesData={habilidadesData}/>
  <Proyerctos proyectosData={proyectosData}/>
</BaseLayout>
