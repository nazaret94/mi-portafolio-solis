---
import BaseLayout from "../layouts/BaseLayout.astro"
import Informacion from "../components/index/Informacion.astro"
import Formacion from "../components/index/Formacion.astro" 
import Experiencia from "../components/index/Experiencia.astro"
import "../styles/global.css"
import { date } from "astro:schema"


const response = await fetch('https://mi-api-solis.vercel.app/api/alumno');
const data = await response.json();
const experienciaData = data[0].experiencia; 
const educacionData = data[0].educacion;                                  
---

<BaseLayout title="Inicio" activePage="inicio">
  <Informacion />
  <Formacion educacionData={educacionData} />
  <Experiencia experienciaData ={experienciaData} /> 
</BaseLayout>
